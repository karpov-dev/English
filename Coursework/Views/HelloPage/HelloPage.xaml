<UserControl x:Class="Coursework.Views.HelloPage.HelloPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res ="clr-namespace:Coursework.Properties"
             xmlns:local="clr-namespace:Coursework.Views.HelloPage"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static res:Resources.ApplicationTitle}" FontSize="25"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Resources.WhatIsYourName}"/>
                <TextBox Text="{Binding UserName}" Width="300"/>
                <Button Content="{x:Static res:Resources.Next}" Command="{Binding NextCommand}" Width="100"/>
            </StackPanel>
        </Grid>
        <Button Grid.Row="2" Content="{x:Static res:Resources.ExitButton}" Command="{Binding Exit}"/>
    </Grid>
</UserControl>
