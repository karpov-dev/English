<UserControl x:Class="Coursework.Views.Elements.TestInfoBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework.Views.Elements"
             mc:Ignorable="d">
    <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
        <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Right">
            <TextBlock Text="{Binding AmountCoins}" Margin="5" FontSize="18"/>
            <Image Source="pack://application:,,,/Resources/coins.png" Width="20" Height="20" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Right">
            <TextBlock Text="{Binding AmountExp}" Margin="5" FontSize="18"/>
            <Image Source="pack://application:,,,/Resources/exp.png" Width="20" Height="20" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Left">
            <TextBlock Text="{Binding CurrentTest}" FontSize="18"/>
        </StackPanel>
    </DockPanel>
</UserControl>
